<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="55sp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.acbull.activitymonitor.MainActivity"
    tools:showIn="@layout/activity_main">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/header"
        android:gravity="center_horizontal"
        android:textSize="25sp"
        android:id="@+id/hea" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/proto"
        android:textSize="15sp"
        android:id="@+id/pro"
        android:layout_below="@+id/hea"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:background="@drawable/button"
        android:id="@+id/agree"
        android:layout_below="@+id/pro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="#ffffff"
        android:text="我同意上述协议，开始采集数据" />
    <Button
        android:background="@drawable/button"
        android:id="@+id/disagree"
        android:layout_below="@+id/agree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:text="我不同意上述协议，退出应用" />

</RelativeLayout>
</ScrollView>